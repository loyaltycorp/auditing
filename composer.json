{
  "name": "eonx-com/auditing",
  "description": "Auditing library that adds request and response logging to applications",
  "type": "library",
  "license": "BSD-3-Clause",
  "minimum-stability": "stable",
  "require": {
    "php": "^7.3",
    "ext-json": "*",
    "aws/aws-sdk-php": "^3.93",
    "eonx-com/multitenancy": "^1.0",
    "guzzlehttp/guzzle": "^6.3",
    "ramsey/uuid": "^3.8",
    "symfony/psr-http-message-bridge": "^1.2",
    "zendframework/zend-diactoros": "^2.1"
  },
  "require-dev": {
    "eonx-com/easy-test": "^2.3",
    "eonx-com/externals": "^v1.0|^2.0",
    "eonx-com/search": "^2.1",
    "eonx-com/standards": "^0.2",
    "eonx-com/utils": "^1.0",
    "illuminate/console": "^5.5",
    "laravel/lumen-framework": "^5.5",
    "phpmd/phpmd": "^2.6",
    "phpstan/phpstan": "^0.11.6",
    "phpstan/phpstan-phpunit": "^0.11.1",
    "phpstan/phpstan-strict-rules": "^0.11.0",
    "phpunit/phpunit": "^8.0",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^4.1",
    "squizlabs/php_codesniffer": "^3.4",
    "vlucas/phpdotenv": "^3.3"
  },
  "suggest": {
    "laravel/framework": "^5.5",
    "laravel/lumen-framework": "^5.5",
    "phpmd/phpmd": "Check coding best practices",
    "phpstan/phpstan": "Static analysis of code to detect potential errors",
    "phpunit/phpunit": "Run unit tests",
    "sebastian/phpcpd": "Detect code duplication",
    "sensiolabs/security-checker": "Check project's dependencies for known vulnerabilities",
    "squizlabs/php_codesniffer": "Check code style",
    "vlucas/phpdotenv": "When using the lumen bridge, phpdotenv is required"
  },
  "autoload": {
    "psr-4": {
      "LoyaltyCorp\\Auditing\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\LoyaltyCorp\\Auditing\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "replace": {
    "loyaltycorp/auditing": "*"
  },
  "scripts": {
    "code-sniffer": "phpcs --standard=vendor/eonx-com/standards/php-code-sniffer/EoneoPay --colors --report=full src tests -p",
    "copy-paste-detector": "phpcpd --ansi --min-lines=5 --min-tokens=70 src tests",
    "mess-detector": "phpmd src,tests text phpmd.xml",
    "phpstan": "phpstan analyze src tests -c phpstan.neon --ansi --level max --memory-limit=2048M",
    "phpunit": "vendor/bin/phpunit --configuration phpunit.xml",
    "coverage": [
      "@phpunit --coverage-text=coverage_output.txt --coverage-html=coverage-html",
      "tar zcf coverage-html.tgz --directory=coverage-html .",
      "easy-test check-coverage -c 100 coverage_output.txt"
    ],
    "standards": [
      "@code-sniffer",
      "@copy-paste-detector",
      "@mess-detector",
      "@phpstan",
      "@phpunit"
    ]
  }
}
